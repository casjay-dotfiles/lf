#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="image"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 021020210301-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : LICENSE.md
# @ReadME        : README.md
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Saturday, Mar 06, 2021 02:52 EST
# @File          : image
# @Description   : lf image preview script
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main() {
  local ID_PREVIEW="preview"
  case "$1" in
  "clear")
    declare -p -A cmd=([action]=remove [identifier]="$ID_PREVIEW") >"$FIFO_UEBERZUG"
    ;;
  "draw")
    declare -p -A cmd=([action]=add [identifier]="$ID_PREVIEW"
      [x]="$3" [y]="$4" [max_width]="$5" [max_height]="$6"
      [path]="$2") >"$FIFO_UEBERZUG"
    ;;
  "*") echo "Unknown command: '$1', '$2'" ;;
  esac
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main "$@" 2>/dev/null
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end

